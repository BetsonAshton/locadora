 @model Locadora.Presentation.Models.FilmeEdicaoViewModel

@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<div class="container mt-3">
    <div class="card">
        <div class="card-body">

            <h5>Edição de Filmes</h5>
            <p>Utilize o formulário abaixo para alterar os dados do filme.</p>
            <hr />

           @using(Html.BeginForm())
            {

                <div class="row mb-2">
                    <div class="col-md-6">
                        <label>Nome do Filme:</label>
                         @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                        <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Nome)
                        </span>

                    </div>
                   
                    <div class="col-md-3">
                        <label>Data de lançamento:</label>
                         @Html.TextBoxFor(model => model.DataCadastro, new { @class = "form-control", @type = "date" })
                        <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.DataCadastro)
                        </span>

                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Disponibilidade:</label>
                         <div>
                            @Html.RadioButtonFor(model => model.Tipo, 1) <span>Disponível</span> 
                        </div>
                        <div>
                            @Html.RadioButtonFor(model => model.Tipo, 2) <span>Indisponível</span>
                        </div>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.Tipo)
                        </span>

                    </div>
                   <div class="col-md-9">
                        <label>Categoria do filme:</label>
                        @Html.DropDownListFor(model => model.IdCategoria, Model.Categorias, "Escolha uma opção", new { @class = "form-select" })
                        <span class="text-danger">
                            @Html.ValidationMessageFor(model => model.IdCategoria)
                        </span>
                    </div>

                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-success" value="Realizar Cadastro" />
                    </div>
                </div>

                }

        </div>
    </div>
</div>


